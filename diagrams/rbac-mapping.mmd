classDiagram
  class AWS_IAM {
    +User/Group
    +Role (assumable)
    +Policy (JSON)
    +STS (temp creds)
  }
  class AZURE_Entra {
    +User/Group/Service Principal
    +App Registration
    +RBAC Role Assignment
    +Conditional Access
  }
  class GCP_IAM {
    +Principal (user, SA)
    +Role (basic/predef/custom)
    +Policy (bindings)
    +Workload Identity
  }
